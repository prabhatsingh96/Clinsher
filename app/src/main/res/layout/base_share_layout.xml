<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#3c2f3c"
    android:alpha=".9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_as"
        android:text="I want to share opportunity as:"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop = "100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rel_layout_job_base"
        android:layout_below="@+id/tv_as"
        android:layout_marginTop="80dp"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_quiter"
            android:text="Quiter"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:textColor="#f24b15"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:background="@drawable/base_share_opp_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_insider"
            android:layout_alignParentRight="true"
            android:text="Insider"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginRight="40dp"
            android:textColor="#41ABF8"
            android:gravity="center"
            android:background="@drawable/base_share_opp_layout"
            android:layout_width="130dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="45dp"
        android:id="@+id/rel_arrow_image"
        android:layout_below="@+id/rel_layout_job_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/up_arrwo"
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/up_arrwo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_why_do_we_ask"
        android:text="Why do we ask you for this information ?"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rel_arrow_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_resion_desc"
        android:text="@string/dec"
        android:textColor="@color/colorWhite"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tv_why_do_we_ask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
