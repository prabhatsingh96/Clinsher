<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#41ABF8"
    android:layout_height="match_parent"
    android:id="@+id/intro_background"
    tools:context=".appActivity.controller.home.HomeFragmentOne">

    <TextView
        android:id="@+id/tv_clinsher"
        android:text="Clinsher"
        android:textSize="40sp"
        android:textAllCaps="false"
        android:layout_marginTop="170dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
    android:id="@+id/tv_choose_job"
        android:layout_below="@+id/tv_clinsher"
        android:layout_marginTop="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="43dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_20"
        android:text="Choose Your Job   Differently"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
