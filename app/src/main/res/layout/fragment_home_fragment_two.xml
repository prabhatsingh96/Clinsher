<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/intro_background"
    tools:context=".appActivity.controller.home.HomeFragmentTwo">

    <TextView
        android:id="@+id/innovative_text"
        android:text="An innovative way to revel"
        android:textSize="22sp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/innovative_text2"
        android:layout_below="@+id/innovative_text"
        android:text="the hidden job market"
        android:textSize="22sp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_choose_job"
        android:layout_below="@+id/innovative_text2"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textSize="@dimen/sp_20"
        android:text="@string/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
