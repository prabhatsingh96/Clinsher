<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_search_tool_profile_image"
        android:src="@drawable/profile_pitcher"
        android:padding="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/search_tool_text"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Search"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_search_my_job"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:clickable="true"
        android:textSize="14dp"
        android:text="My Job"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_share_opportunity_on_dialog_layout"
        android:layout_width="80dp"
        android:layout_height="30dp" />


</RelativeLayout>
