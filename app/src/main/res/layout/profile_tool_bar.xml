<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <RelativeLayout
        android:id="@+id/profile_tool_layout_rel"

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#41ABF8"
        >
        <ImageView
            android:id="@+id/setting_icon"
            android:padding="5dp"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:src="@drawable/settingicon"
            android:background="#41ABF8"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </RelativeLayout>



      <RelativeLayout
          android:id="@+id/info_layout"
          android:layout_marginTop="90dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <android.support.v7.widget.CardView

              android:layout_marginRight="20dp"
              android:layout_marginLeft="20dp"
              app:cardCornerRadius="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/profile_name"
                  android:layout_marginLeft="20dp"
                  android:gravity="center"
                  android:text="@string/profile_info"
                  android:textSize="16dp"
                  android:textColor="#000000"
                  android:layout_marginTop="80dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <ImageView
                  android:src="@drawable/edit"
                  android:layout_gravity="end"
                  android:layout_marginTop="100dp"
                  android:layout_marginRight="3dp"
                  android:layout_width="22dp"
                  android:layout_height="22dp" />
             <View
                 android:layout_marginTop="160dp"
                 android:layout_marginLeft="64dp"
                 android:layout_width="200dp"
                 android:layout_height="1dp"
                 android:background="#000000"
                 >

             </View>
              <Button
                  android:id="@+id/add_summury_btn"
                  android:layout_marginTop="160dp"
                  android:text="Add your short summary"
                  android:clickable="true"
                  android:textAllCaps="false"
                  android:background="@android:color/transparent"
                  android:layout_marginLeft="90dp"
                  android:alpha=".5"
                  android:textColor="#f21f60"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />
              <ImageView
                  android:src="@drawable/edit"
                  android:layout_gravity="end"
                  android:layout_marginTop="160dp"
                  android:layout_marginRight="3dp"
                  android:layout_width="22dp"
                  android:layout_height="22dp" />


          </android.support.v7.widget.CardView>

      </RelativeLayout>
   <!-- <android.support.v4.widget.CircleImageView
        android:src="@drawable/profile_placholder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="125dp"
        android:layout_height="125dp" />-->


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:civ_border_width="10dp"
        app:civ_border_color="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:src="@drawable/profile_placholder" />




</RelativeLayout>
