<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="15dp"
        android:layout_height="60dp"
        android:background="#2d3ddd">

       <!-- <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/de_list" />-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="Delete"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </RelativeLayout>



    <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:id="@+id/card_view_foreground"
       android:layout_marginLeft="15dp"
        app:cardCornerRadius="10dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="10dp">

       <RelativeLayout
           android:layout_marginLeft="8dp"
           android:layout_marginRight="8dp"
           android:layout_marginBottom="8dp"
           android:layout_marginTop="8dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/my_job_recyler_view_address"
               android:text="Legle counsel"
               android:textSize="18dp"
               android:textColor="@color/colorBlack"
               android:alpha=".8"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:layout_below="@+id/my_job_recyler_view_address"
               android:id="@+id/my_job_recyler_view_location"
               android:text="Investment fund , london united kingdom"
               android:textSize="14dp"
               android:layout_marginTop="4dp"
               android:textColor="@color/colorBlack"
               android:alpha=".8"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <ImageView
               android:id="@+id/iv_my_job_recycler_view_logo"
               android:layout_alignParentRight="true"
               android:src="@drawable/logo_sm"
               android:layout_marginTop="5dp"
               android:layout_marginRight="7dp"
               android:layout_width="40dp"
               android:layout_height="40dp" />

           <TextView
               android:id="@+id/tv_my_job_name_recycler_view"
               android:layout_alignParentRight="true"
               android:layout_below="@id/iv_my_job_recycler_view_logo"
               android:layout_marginRight="12dp"
               android:textSize="13dp"
               android:text="Mcb"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <ImageView
               android:id="@+id/iv_clock_image_my_job_recycler"
               android:layout_below="@+id/my_job_recyler_view_location"
               android:src="@drawable/time_blue"
               android:layout_marginTop="8dp"
               android:layout_width="15dp"
               android:layout_height="15dp" />

           <TextView
               android:id="@+id/tv_my_job_time_text"
               android:layout_below="@+id/my_job_recyler_view_location"
               android:layout_toRightOf="@+id/iv_clock_image_my_job_recycler"
               android:text="1 day ago"
               android:layout_marginTop="7dp"
               android:layout_marginLeft="5dp"
               android:textSize="13dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

   </android.support.v7.widget.CardView>


</RelativeLayout>
