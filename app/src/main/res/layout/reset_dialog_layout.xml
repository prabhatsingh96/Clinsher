<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/custom_dialog_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/note"
            android:text="Note"
            android:textSize="22dp"
            android:gravity="center"
            android:padding="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/reset_note_info"
            android:layout_below="@+id/note"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="An email has been send to enzochvanne@gmail.com with more instruction"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/reset_btn_ok"
            android:layout_below="@+id/reset_note_info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="35dp"
            android:text="Ok"
            android:textSize="22dp"
            android:textColor="#41ABF8"
            android:padding="9dp"
            android:background="@drawable/sign_up_custom"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />


</RelativeLayout>
