<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.clinsher.appActivity.controller.search.SearchFragmentOne">

    <TextView
        android:id="@+id/btn_job_title_sector_search_frg_one"
        android:background="@drawable/btn_custom_signup_with_linkedin"
        android:hint="Job Title , Sector"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/btn_country_city_search_frg_one"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


    <TextView
        android:id="@+id/btn_country_city_search_frg_one"
        android:background="@drawable/btn_custom_signup_with_linkedin"
        android:hint="Country , City"
        android:textSize="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/btn_search_frag_one"
        android:clickable="true"
        android:layout_below="@+id/btn_country_city_search_frg_one"
        android:src="@drawable/search_placeholder"
        android:text="Search"
        android:textColor="@color/colorWhite"
        android:textSize="19dp"
        android:gravity="center"
        android:background="@drawable/circle_search_btn_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />


</RelativeLayout>
