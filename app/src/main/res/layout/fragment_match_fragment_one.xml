<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.clinsher.appActivity.controller.match.MatchFragmentOne">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_50"
        android:id="@+id/card_match_fragment_one"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Leagle Assistant"
                android:textColor="@color/colorBlack"
                android:alpha=".8"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Law Firm Luxembourg, Permament, Full Time"
                android:textColor="@color/colorBlack"
                android:alpha=".8"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Seekers that match your add"
                android:textColor="@color/colorPrimaryDark"
                android:alpha=".8"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:text="No Profile to swap yet"
                android:alpha=".8"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:textSize="21dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_match_profile_match_frag_one"
                android:background="@drawable/sign_up_custom"
                android:text="Match Profile"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="170dp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
