<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fluper.clinsher.appActivity.controller.shareopp.ShareOpportunityFragmentThree">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/share_opp_note_layout"
        android:background="#f2418b"
        android:alpha=".8"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:text="To protect your anonymity, the name of the company will not be display in your post publicily."
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout_share_opp_frg_three"
        android:layout_below="@+id/share_opp_note_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/share_opp_company_name"
            android:hint="Name of the company"
            android:singleLine="true"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/share_confidently_note"
            android:layout_below="@+id/share_opp_company_name"
            android:text="This information will remain confidential"
            android:alpha=".7"
            android:textSize="11dp"
            android:textColor="#f2150b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:id="@+id/share_opp_company_type"
            android:layout_below="@+id/share_confidently_note"
            android:hint="Type of the company"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/share_opp_brefily_describe"
            android:layout_below="@+id/share_opp_company_type"
            android:text="Breifly describe the role"
            android:textColor="@color/colorBlack"
            android:alpha=".7"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/share_opp_role_desc"
            android:layout_marginTop="8dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:text="you can write about the duties, responsebilities and skill associated with the role"
            android:gravity="center"
            android:layout_below="@+id/share_opp_brefily_describe"
            android:background="@drawable/btn_custom_change_user_name_layout"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <TextView
            android:id="@+id/share_opp_access_company"
            android:layout_below="@+id/share_opp_role_desc"
            android:text="Access Company"
            android:textColor="@color/colorBlack"
            android:alpha=".8"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/share_opp_emozi_layout"
            android:layout_below="@+id/share_opp_access_company"
            android:layout_marginTop="8dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:weightSum="5"
            android:clickable="true"
            android:orientation="horizontal"
            android:background="@drawable/btn_custom_change_user_name_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_marginLeft="45dp"
                android:layout_weight="1"
                android:src="@drawable/happy_emoji_blue"
                android:tint="#36f2bd"
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/smile_emoji_blue"
                android:tint="#36f2bd"
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/normal_emoji_grey"
                android:tint="#36f2bd"
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:src="@drawable/sad_emoji_red"
                android:tint="#36f2bd"
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp" />
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="45dp"
                android:layout_weight="1"
                android:src="@drawable/happy_emoji_blue"
                android:tint="#36f2bd"
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp" />

        </LinearLayout>

        <Button
            android:id="@+id/share_opp_btn_done"
            android:layout_below="@+id/share_opp_emozi_layout"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:text="Done"
            android:textAllCaps="false"
            android:background="@drawable/sign_up_custom"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
